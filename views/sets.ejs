<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Collection</title>
</head>

<body>
  <!-- Include navbar -->
  <%- include('partials/navbar', { page: "/lego/sets" }) %>

  <!-- Lego Collection message for user using Hero component-->
  <div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Collection</h1>
          <p class="py-6">Browse the entire collection. Click the theme to filter by themes such as: <a href="/lego/sets?theme=Technic" class="btn btn-primary btn-xs">Technic</a> <a href="/lego/sets?theme=Icons" class="btn btn-primary btn-xs">Icons</a> <a href="/lego/sets?theme=Books" class="btn btn-primary btn-xs">Books</a> </p>
        </div>
      </div>
    </div>
    <br>
    <!-- Render table with the lego sets data -->
    <table class="table table-zebra">
      <tbody>
        <% sets.forEach(set=> { %>
        <tr>
          <td>
            <div class="avatar">
              <div class="w-32 h-32 rounded-lg bg-transparent bg-no-repeat bg-cover" style="background-image: url('<%= set.img_url %>');"></div>
            </div>
          </td>
          <td>
            <%= set.name %> | <a href="/lego/sets?theme=<%= set.theme %>" class="btn btn-xs btn-primary">
              <%= set.theme %>
            </a>
          </td>
          <td>
            <span class="font-bold">Year: </span>
            <%= set.year %><br>
            <span class="font-bold">Parts: </span>
            <%= set.num_parts %>
          </td>
          <td><a href="/lego/sets/<%= set.set_num %>" class="btn btn-xs btn-secondary">Details</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

</body>

</html>